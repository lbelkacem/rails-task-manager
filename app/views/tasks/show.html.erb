<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<%= check_box_tag(:task_completed) %>
<%= label_tag(:task_completed, "This task is completed") %>
<br>
<%= link_to 'Delete this task',
  task_path(@task),
  data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }
%>
<br>
<%= link_to 'Back to list', tasks_path %>
